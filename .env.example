# Environment
APP_ENV=local
NODE_ENV=development

# Project URLs
NUXT_PUBLIC_API_BASE=http://localhost:8000/api
NUXT_PUBLIC_SERVER_URL=http://localhost:8000
NUXT_PUBLIC_CLIENT_URL=http://localhost:3000
NUXT_PUBLIC_SITE_URL=http://localhost:3000

# Cookie domain (for production cross-subdomain cookies, e.g., .example.com)
NUXT_PUBLIC_COOKIE_DOMAIN=

# Captcha (use test key for development: 1x00000000000000000000AA)
TURNSTILE_SITE_KEY=

# Sentry (optional in local)
SENTRY_AUTH_TOKEN=

# Site Legal Information
NUXT_PUBLIC_SITE_NAME=Repostea
NUXT_PUBLIC_SITE_OWNER_NAME=Your Name or Company
NUXT_PUBLIC_SITE_OWNER_DNI=
NUXT_PUBLIC_SITE_CONTACT_EMAIL=contact@example.com
NUXT_PUBLIC_SITE_PURPOSE=Community content aggregation platform
NUXT_PUBLIC_SITE_JURISDICTION=Your Location

# Language configuration
# Supported locales (comma-separated): es, en, ca, gl, eu
NUXT_PUBLIC_SUPPORTED_LOCALES=es,en,ca,gl,eu
# Default locale (must be in SUPPORTED_LOCALES)
NUXT_PUBLIC_DEFAULT_LOCALE=es

# Laravel Reverb (WebSockets)
# These values must match REVERB_* in server/.env
NUXT_PUBLIC_REVERB_APP_KEY=local
NUXT_PUBLIC_REVERB_HOST=localhost
NUXT_PUBLIC_REVERB_PORT=8080
NUXT_PUBLIC_REVERB_SCHEME=http

# Tenor GIF API
# Get free API key at: https://developers.google.com/tenor/guides/quickstart
NUXT_PUBLIC_TENOR_API_KEY=

# Web Push Notifications (VAPID)
# Generate with: npx web-push generate-vapid-keys
NUXT_PUBLIC_VAPID_PUBLIC_KEY=

# Site Branding (optional, for footer and SEO)
NUXT_PUBLIC_APP_NAME=Repostea
NUXT_PUBLIC_CONTACT_EMAIL=
NUXT_PUBLIC_FEDIVERSE_HANDLE=
NUXT_PUBLIC_TWITTER_HANDLE=
