{
  "name": "repostea-client",
  "version": "1.0.3",
  "private": true,
  "type": "module",
  "license": "GPL-3.0-or-later",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=4096' nuxi build",
    "dev": "nuxi dev",
    "dev:e2e": "NODE_OPTIONS='--max-old-space-size=4096' nuxi dev",
    "watch": "NODE_OPTIONS='--max-old-space-size=4096' nuxi dev",
    "generate": "nuxi generate",
    "generate:api": "cross-env NUXT_PUBLIC_API_BASE=$NUXT_PUBLIC_API_BASE nuxi generate",
    "generate:local": "cross-env NUXT_PUBLIC_API_BASE=http://localhost:8000/api nuxi generate",
    "preview": "nuxt preview",
    "postinstall": "nuxi prepare",
    "quality": "npm run lint && npm run prettier",
    "lint": "eslint . --fix",
    "prettier": "prettier --write \"**/*.{ts,js,vue,css,scss}\"",
    "analyze": "nuxi analyze",
    "start": "node .output/server/index.mjs",
    "test": "vitest run --reporter=verbose",
    "test:unit": "vitest run --reporter=verbose",
    "test:watch": "vitest --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && echo '\n⚠️  Remember: E2E tests require Laravel API running. Run: npm run test:e2e'",
    "test:full": "bash scripts/test-full.sh",
    "test:e2e": "cypress run",
    "test:e2e:safe": "bash scripts/test-e2e-safe.sh",
    "test:e2e:fail-fast": "FAIL_FAST=1 cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headed": "cypress run --headed",
    "test:e2e:wizard": "cypress run --spec 'cypress/e2e/submit-wizard.cy.js'",
    "test:e2e:navigation": "cypress run --spec 'cypress/e2e/navigation-improvements.cy.js'",
    "test:e2e:anonymous": "cypress run --spec 'cypress/e2e/anonymous-users.cy.js'",
    "test:e2e:notifications": "cypress run --spec 'cypress/e2e/elegant-notifications.cy.js'",
    "test:e2e:validation": "cypress run --spec 'cypress/e2e/smart-validation.cy.js'",
    "test:e2e:all": "cypress run --spec 'cypress/e2e/run-all-tests.cy.js'",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@nuxt/content": "^3.5.1",
    "@nuxt/fonts": "^0.11.4",
    "@nuxt/icon": "^1.13.0",
    "@nuxt/image": "^1.10.0",
    "@nuxt/scripts": "^0.11.7",
    "@nuxt/ui": "^3.1.2",
    "@nuxtjs/critters": "^0.9.0",
    "@nuxtjs/i18n": "^9.5.4",
    "@nuxtjs/robots": "^5.5.6",
    "@nuxtjs/sitemap": "^7.4.7",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@nuxtjs/turnstile": "^1.0.0",
    "@pinia/nuxt": "^0.11.3",
    "@unhead/vue": "^2.0.10",
    "@vueuse/core": "^13.2.0",
    "@vueuse/nuxt": "^13.2.0",
    "axios": "^1.9.0",
    "chart.js": "^4.4.9",
    "dompurify": "^3.2.6",
    "laravel-echo": "^2.2.6",
    "marked": "^15.0.12",
    "nuxt": "^3.17.4",
    "pinia": "^3.0.4",
    "pusher-js": "^8.4.0",
    "typescript": "^5.8.3",
    "vue": "^3.5.14",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.5.1",
    "vue-toastification": "2.0.0-rc.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@iconify-json/fa6-brands": "^1.2.6",
    "@iconify-json/fa6-regular": "^1.2.4",
    "@iconify-json/fa6-solid": "^1.2.4",
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/eslint-config": "^1.4.1",
    "@nuxt/test-utils": "^3.19.0",
    "@pinia/testing": "^1.0.1",
    "@playwright/test": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.1.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.11",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "cypress": "^14.4.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.1.0",
    "happy-dom": "^17.4.7",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "msw": "^2.8.4",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.17",
    "vitest": "^3.1.4",
    "vue-eslint-parser": "^10.1.3"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "overrides": {
    "rollup": {
      "@rollup/rollup-win32-x64-msvc": "4.27.4"
    }
  },
  "optionalDependencies": {
    "@oxc-parser/binding-win32-x64-msvc": "^0.61.2",
    "@rollup/rollup-win32-x64-msvc": "^4.41.0"
  }
}
